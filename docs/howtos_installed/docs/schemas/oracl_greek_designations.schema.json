{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://codesentinel.local/schemas/oracl_greek_designations.schema.json",
  "title": "ORACL Greek Designations",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "designations"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "minimum": 1
    },
    "designations": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "key",
          "greek",
          "latin",
          "purpose",
          "allowed_contexts",
          "constraints"
        ],
        "properties": {
          "key": {
            "type": "string",
            "pattern": "^[A-Z]+$",
            "description": "ASCII key used in logs and labels (e.g., ALPHA)."
          },
          "greek": {
            "type": "string",
            "description": "Greek letter symbol (e.g., Î‘)."
          },
          "latin": {
            "type": "string",
            "description": "Greek name (e.g., Alpha)."
          },
          "purpose": {
            "type": "string",
            "minLength": 1
          },
          "allowed_contexts": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "constraints": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "examples": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "aliases": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      }
    }
  }
}
