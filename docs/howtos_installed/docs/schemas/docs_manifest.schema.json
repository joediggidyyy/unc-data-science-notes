{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CodeSentinel Documentation Manifest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "generated_at",
    "workspace",
    "scope",
    "document_count",
    "documents"
  ],
  "properties": {
    "generated_at": { "type": "string" },
    "workspace": { "type": "string" },
    "scope": { "type": "string" },
    "document_count": { "type": "integer" },
    "documents": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "dataset_id",
          "path",
          "title",
          "domain",
          "workflow",
          "keywords",
          "backlinks",
          "metadata"
        ],
        "properties": {
          "dataset_id": { "type": "string" },
          "path": { "type": "string" },
          "title": { "type": "string" },
          "domain": { "type": "string" },
          "workflow": { "type": "string" },
          "keywords": {
            "type": "array",
            "items": { "type": "string" }
          },
          "backlinks": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["type", "target", "relation"],
              "properties": {
                "type": { "type": "string" },
                "target": { "type": "string" },
                "relation": { "type": "string" }
              }
            }
          },
          "metadata": {
            "type": "object",
            "additionalProperties": false,
            "required": ["size_bytes", "last_modified", "headings"],
            "properties": {
              "size_bytes": { "type": "integer" },
              "last_modified": { "type": "string" },
              "headings": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          }
        }
      }
    }
  }
}
