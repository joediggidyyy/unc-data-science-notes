{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://codesentinel.dev/schemas/health_report.schema.json",
  "title": "CodeSentinel Health Report",
  "description": "Canonical structure for logs/health_reports/* JSON artifacts.",
  "type": "object",
  "required": [
    "session_id",
    "phase_token",
    "title",
    "created_at",
    "generated_by",
    "status",
    "summary",
    "kcs"
  ],
  "properties": {
    "session_id": {"type": "string"},
    "phase_token": {"type": "string"},
    "title": {"type": "string"},
    "created_at": {"type": "string", "format": "date-time"},
    "generated_by": {"type": "string"},
    "status": {"type": "string", "enum": ["open", "complete", "archived"]},
    "completion_timestamp": {"type": "string", "format": "date-time"},
    "scope": {"type": "string"},
    "summary": {"type": "string"},
    "kcs": {
      "type": "object",
      "required": ["k", "c", "s"],
      "properties": {
        "k": {"type": "number", "minimum": 0, "maximum": 1},
        "c": {"type": "number", "minimum": 0, "maximum": 1},
        "s": {"type": "number", "minimum": 0, "maximum": 1}
      }
    },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path"],
        "properties": {
          "path": {"type": "string"},
          "description": {"type": "string"}
        }
      }
    },
    "observations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["timestamp", "summary"],
        "properties": {
          "timestamp": {"type": "string", "format": "date-time"},
          "summary": {"type": "string"},
          "phase": {"type": "string"},
          "details": {
            "type": "array",
            "items": {"type": "string"}
          }
        }
      }
    },
    "risks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "severity": {"type": "string", "enum": ["low", "medium", "high", "critical"]},
          "description": {"type": "string"},
          "status": {"type": "string"}
        }
      }
    },
    "recommendations": {
      "type": "array",
      "items": {"type": "string"}
    }
  },
  "additionalProperties": false
}
